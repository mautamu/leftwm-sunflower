[colors]
background = #20110A50
foreground = #FBD405
background-alt = #32241300
foreground-alt = #Fba914
petal-background = #FBA914
petal-foreground = #20110A
petal-2-background = #FBD40550
petal-2-foreground = #DF6D26
primary = #ffb52a
secondary = #e60053
alert = #FBD40550

[bar/mainbar0]
inherit = bar/barbase
modules-left = workspace0

[module/workspace0]
type = custom/script
exec = leftwm-state -w 0 -t $SCRIPTPATH/template.liquid
tail = true

[bar/mainbar1]
inherit = bar/barbase
modules-left = workspace1
[module/workspace1]
type = custom/script
exec = leftwm-state -w 1 -t $SCRIPTPATH/template.liquid
tail = true

[bar/mainbar2]
inherit = bar/barbase
modules-left = workspace2
[module/workspace2]
type = custom/script
exec = leftwm-state -w 2 -t $SCRIPTPATH/template.liquid
tail = true

[bar/mainbar3]
inherit = bar/barbase
modules-left = workspace3
[module/workspace3]
type = custom/script
exec = leftwm-state -w 3 -t $SCRIPTPATH/template.liquid
tail = true


[bar/barbase]
width = ${env:width}
offset-x = ${env:offsetx}
monitor = ${env:monitor}
;offset-y = ${env:y}
;width = 100%
height = 27
fixed-center = true
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 3
line-color = #f00
border-size = 0
border-color = #00000000
padding-left = 0
padding-right = 0
module-margin-left = 0
module-margin-right = 0
font-0 = "Source Code Pro Semibold:size=10;1"
font-1 = "Font Awesome 5 Free:style=Solid:size=10;1"
font-2 = "Font Awesome 5 Brands:size=10;1"
modules-center = date
modules-right = battery pulseaudio powermenu
tray-position = 
tray-padding = 0
cursor-click = pointer
cursor-scroll = ns-resize

[module/time-utc]
type = custom/script
exec = TZ=Atlantic/Madeira date +"%H:%M"
interval = 5
format-prefix = ÔÄó
format-foreground = #fba914
format-background = #20110A
format-padding = 2

[module/date]
type = internal/date
interval = 5

date =
date-alt = " %Y-%m-%d"

time = %H:%M:%S
time-alt = %H:%M:%S (%a)

format-prefix =  ÔÄó
format-foreground = #fba914
format-background = #20110A
format-padding = 2

label = %date% %time%

[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 2
format-foreground = ${colors.petal-2-foreground}
format-background = ${colors.petal-2-background}

label-open ="  ÔÄë  "
label-open-foreground = ${colors.petal-foreground}
label-open-background = ${colors.petal-background}
label-close = "  Ôêê cancel"
label-close-foreground = ${colors.foreground}
label-close-background = ${colors.background}
label-separator = |
label-separator-foreground = ${colors.petal-2-foreground}
label-separator-background = ${colors.petal-2-background}

menu-0-0 = log off
menu-0-0-exec = menu-open-1
menu-0-1 = reboot
menu-0-1-exec = menu-open-2
menu-0-2 = "power off  " 
menu-0-2-exec = menu-open-3

menu-1-0 = ../
menu-1-0-exec = menu-open-0
menu-1-1 = log off
menu-1-1-exec = pkill leftwm

menu-2-0 = ../
menu-2-0-exec = menu-open-0
menu-2-1 = reboot
menu-2-1-exec = reboot

menu-3-0 = ../
menu-3-0-exec = menu-open-0
menu-3-1 = power off
menu-3-1-exec = poweroff

;---- everything passed this line is bloat and can be removed ----

[module/pulseaudio]
type = internal/pulseaudio


format-volume = <label-volume>
label-volume = VOL %percentage%%
label-volume-foreground = ${colors.petal-foreground}
label-volume-background = ${colors.petal-background}

label-muted = üîá muted
label-muted-foreground = ${colors.petal-2-foreground}
label-muted-background = ${colors.petal-2-background}

[module/battery]
type = internal/battery

full-at = 99

battery = BAT0
adapter = ACAD

poll-interval = 2
time-format = %H:%M

format-charging = <animation-charging> <label-charging>
format-charging-prefix = "CHG"
format-charging-prefix-background = ${colors.petal-background}
format-charging-prefix-foreground = ${colors.petal-foreground}
format-charging-background = ${colors.petal-background}
format-charging-foreground = ${colors.petal-foreground}
format-charging-padding = 1

format-discharging = <ramp-capacity> <label-discharging>
format-discharging-background = ${colors.petal-background}
format-discharging-foreground = ${colors.petal-foreground}
format-discharging-padding = 1

label-charging = %percentage%%
label-discharging = %percentage%%

label-full = Fully Charged
label-full-background = ${colors.petal-background}
label-full-foreground = ${colors.petal-foreground}
label-full-padding = 1

ramp-capacity-0 = Óâå
ramp-capacity-1 = Óâå
ramp-capacity-2 = Óâå
ramp-capacity-3 = Óâç
ramp-capacity-4 = Óâé
ramp-capacity-5 = Óâè
ramp-capacity-6 = Óâê
ramp-capacity-7 = Óâí
ramp-capacity-8 = Óâì
ramp-capacity-9 = Óâî

animation-charging-0 = Óâå
animation-charging-1 = Óâç
animation-charging-2 = Óâé
animation-charging-3 = Óâè
animation-charging-4 = Óâê
animation-charging-5 = Óâë
animation-charging-6 = Óâí
animation-charging-7 = Óâì
animation-charging-8 = Óâî
animation-charging-framerate = 750

psuedo-transparency = true
